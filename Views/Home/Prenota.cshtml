@model Prenotazione;

@{
    ViewData["Title"] = "Prenota";
}

<div class="text-center">
    <h1 class="display-4">Inserisci i tuoi dati per prenotare</h1>
   <form class="m-2" method="post" asp-action="Prenota">
        <div class="form-group">
            <label asp-for="Nome">Il tuo nome:</label>
            <input asp-for="Nome" class="form-control"> 
        </div>
        <div>
            <label asp-for="Email">La tua Email:</label>
            <input asp-for="Email" class="form-control">
        </div>
        <button type="submit" class="btn btn_primary">Prenota</button>
    </form>
</div>

@if(Model?.Nome == null && Model?.Email)
{
    <h3> Risultati prenotazione</h3>
    <p> @Model.Nome</p>
    <p> @Model.Email</p>
}

